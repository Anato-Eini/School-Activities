<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="mainContainer" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafx1.PerfectNumber.PerfectNumberController">
    <Label layoutX="128.0" layoutY="14.0" text="PERFECT NUMBER GENERATOR">
        <font>
          <Font name="System Bold" size="24.0" />
        </font>
    </Label>
    <GridPane layoutX="51.0" layoutY="110.0" prefHeight="177.0" prefWidth="526.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="177.0" minWidth="10.0" prefWidth="177.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="165.0" minWidth="0.0" prefWidth="0.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="349.0" minWidth="10.0" prefWidth="349.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <Label prefHeight="17.0" prefWidth="170.0" text="Up to what number? ">
            <font>
                <Font name="System Bold" size="17.0" />
            </font>
        </Label>
        <Label text="Number of Threads: " GridPane.rowIndex="1">
            <font>
                <Font name="System Bold" size="17.0" />
            </font>
        </Label>
        <TextField fx:id="maxNumber" prefHeight="62.0" prefWidth="349.0" GridPane.columnIndex="2">
            <font>
                <Font name="System Italic" size="24.0" />
            </font>
        </TextField>
        <TextField fx:id="numberOfThreads" prefHeight="54.0" prefWidth="349.0" GridPane.columnIndex="2" GridPane.rowIndex="1">
            <font>
                <Font name="System Italic" size="24.0" />
            </font>
        </TextField>
    </GridPane>
    <Button fx:id="Start" layoutX="213.0" layoutY="324.0" mnemonicParsing="false" onMouseClicked="#startButton" prefHeight="25.0" prefWidth="218.0" text="Start" />
   <Label fx:id="status" layoutX="180.0" layoutY="83.0" prefHeight="27.0" prefWidth="330.0" textAlignment="RIGHT" textFill="#ff0505">
      <font>
         <Font name="System Bold" size="18.0" />
      </font>
   </Label>
</AnchorPane>
